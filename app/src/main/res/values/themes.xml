<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Fitnessandfinance" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="android:windowBackground">#ffffff</item>

        <item name="colorPrimary">@color/dark2</item>
        <item name="colorPrimaryVariant">@color/light1</item>
        <item name="colorOnPrimary">@color/light2</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow</item>
        <item name="colorSecondaryVariant">#778E1B</item>
        <item name="colorOnSecondary">@color/dark2</item>

        <item name="colorAccent">#ff00ff</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#222930</item>
        <!-- Customize your theme here. -->

        <item name="cardViewStyle">@style/Widget.FitnessNFinance.CardView</item>

        <item name="progressBarForegroundColor">?colorSecondary</item>
        <item name="progressBarBackgroundColor">#50000000</item>
    </style>
    
    <style name="Widget.FitnessNFinance.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">?colorPrimary</item>
        <item name="cardCornerRadius">16dp</item>
    </style>

    <style name="TextAppearance.FitnessNFinance.CardView.Heading" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">?colorPrimaryVariant</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.FitnessNFinance.CardView.Content" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?colorSecondary</item>
    </style>
</resources>